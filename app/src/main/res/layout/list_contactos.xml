<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trab_3.MainActivity"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="5dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NOME"
        android:hint="nome"
        android:textStyle="bold"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LASTNAME"
        android:hint="lastname"
        android:layout_toRightOf="@id/NOME"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="17dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgPhone"
        android:src="@drawable/ic_phone"
        android:layout_below="@id/NOME"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PERSONAL_NUMBER"
        android:hint="personal number"
        android:layout_below="@id/NOME"
        android:layout_toRightOf="@id/imgPhone"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgPhone1"
        android:src="@drawable/ic_phone"
        android:layout_below="@id/imgPhone"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/COMPANY_NUMBER"
        android:hint="company number"
        android:layout_below="@id/PERSONAL_NUMBER"
        android:layout_toRightOf="@id/imgPhone1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgMail"
        android:src="@drawable/ic_mail1"
        android:layout_below="@id/PERSONAL_NUMBER"
        android:layout_toLeftOf="@id/MAIL"
        android:layout_marginRight="5dp"
        android:layout_marginTop="11dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MAIL"
        android:hint="mail"
        android:layout_below="@id/PERSONAL_NUMBER"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"/>

<!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ID"
        android:hint="ID"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp" />

-->

</RelativeLayout>